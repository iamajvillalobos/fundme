<article>
	<header>
		<h2><%= @project.name %></h2>
		<%= image_for(@project) %>
	</header>
	<p><%= @project.description %></p>
	<table>
		<tr>
			<th>Website</th>
			<td><%= @project.website %></td>
		</tr>
		<tr>
			<th>Target Pledge</th>
			<td><%= number_to_currency(@project.target_pledge_amount) %></td>
		</tr>
		<tr>
			<th>Pledging Ends On</th>
			<td><%= format_pledging_date(@project) %></td>
		</tr>
		<tr>
			<th>Team Members</th>
			<td><%= @project.team_members %></td>
		</tr>
	</table>
</article>

<%= link_to "All Projects", projects_path %>
<%= link_to "Edit", edit_project_path(@project) %>
<%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } %>